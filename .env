# Agentic AI Honeypot System - Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
FLASK_ENV=development
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=False

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Authorized IP addresses (comma-separated)
# Use * to allow all IPs (not recommended for production)
AUTHORIZED_IPS=127.0.0.1,192.168.1.0/24

# API Keys for authentication (comma-separated)
API_KEYS=test_key_12345,dev_key_67890,prod_key_secure_string

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///honeypot.db
# DATABASE_URL=postgresql://user:password@localhost:5432/honeypot

# =============================================================================
# REDIS CONFIGURATION (Optional - for scaling)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Maximum conversation turns before auto-exit
MAX_CONVERSATION_TURNS=50

# Conversation timeout (minutes)
CONVERSATION_TIMEOUT_MINUTES=60

# =============================================================================
# INTELLIGENCE EXTRACTION SETTINGS
# =============================================================================
# Minimum confidence threshold for extracted entities
MIN_ENTITY_CONFIDENCE=0.75

# Enable regex-based extraction
ENABLE_REGEX_EXTRACTION=true

# Enable NLP-based extraction
ENABLE_NLP_EXTRACTION=true

# =============================================================================
# SAFETY & COMPLIANCE
# =============================================================================
# Honeypot exposure risk threshold (0-1)
# If exceeded, system safely exits to avoid detection
HONEYPOT_EXPOSURE_THRESHOLD=0.7

# Enable safety constraint checks
ENABLE_SAFETY_CHECKS=true

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/honeypot.log

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Mode: development, testing, production
DEPLOYMENT_MODE=development

# Notification webhook (optional - for real-time alerts)
# WEBHOOK_URL=https://your-server.com/webhook

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_PHISHING_ANALYSIS=true
ENABLE_BEHAVIORAL_PROFILING=true
ENABLE_SCAMMER_TRACKING=true
ENABLE_CROSS_CONVERSATION_LEARNING=false
