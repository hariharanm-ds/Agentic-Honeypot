{
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "framework": "flask",
  "functions": {
    "wsgi.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "API_HOST": "0.0.0.0",
    "API_PORT": "8000"
  }
}
