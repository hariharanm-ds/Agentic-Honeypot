# ═══════════════════════════════════════════════════════════════════════════════
# AGENTIC HONEYPOT CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# FLASK CONFIGURATION
FLASK_ENV=production
DEBUG=False
USE_RELOADER=False

# API SERVER CONFIGURATION
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# SECURITY - API KEYS
# Format: comma-separated list of valid API keys
API_KEYS=test_key_12345,prod_key_secure_xyz789

# SECURITY - AUTHORIZED IPS
# Use * for development (allow all IPs), specific IPs for production
# Format: 127.0.0.1,192.168.1.0/24
AUTHORIZED_IPS=*

# DATABASE CONFIGURATION
# Development: SQLite
# Production: PostgreSQL (better for scaling)
DATABASE_URL=sqlite:///honeypot.db

# Redis Configuration (optional, for caching/scaling)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=False

# AGENT CONFIGURATION
# Maximum conversation turns before auto-exit
MAX_CONVERSATION_TURNS=50

# Conversation timeout in minutes
CONVERSATION_TIMEOUT_MINUTES=60

# INTELLIGENCE EXTRACTION
# Minimum confidence threshold for entity extraction (0.0 to 1.0)
MIN_ENTITY_CONFIDENCE=0.75

# Enable regex-based extraction
ENABLE_REGEX_EXTRACTION=true

# Enable NLP-based extraction
ENABLE_NLP_EXTRACTION=true

# SAFETY CONFIGURATION
# Threshold for detecting honeypot exposure risk (0.0 to 1.0)
HONEYPOT_EXPOSURE_THRESHOLD=0.7

# Enable safety checks and logging
ENABLE_SAFETY_CHECKS=true

# LOGGING
LOG_FILE=logs/honeypot.log
LOG_LEVEL=INFO

# SCAM DETECTION CONFIGURATION
# Pattern matching weight
SCAM_PATTERN_WEIGHT=0.5

# NLP analysis weight
SCAM_NLP_WEIGHT=0.3

# Keyword matching weight
SCAM_KEYWORD_WEIGHT=0.2

# Confidence threshold for scam detection
SCAM_DETECTION_THRESHOLD=0.35

# PERSONA CONFIGURATION
DEFAULT_PERSONA=rajesh_kumar

# Response delay in seconds (0 = no delay)
PERSONA_RESPONSE_DELAY=0

# Typo injection percentage (0 to 1)
PERSONA_TYPO_RATE=0.15

# ═══════════════════════════════════════════════════════════════════════════════
# ENVIRONMENT NOTES
# ═══════════════════════════════════════════════════════════════════════════════

# DEVELOPMENT (local):
# - Set FLASK_ENV=development
# - Set DEBUG=True (auto-reload)
# - Set AUTHORIZED_IPS=127.0.0.1 (localhost only)
# - Use SQLite database
# - Set LOG_LEVEL=DEBUG

# PRODUCTION (railway.app):
# - Set FLASK_ENV=production
# - Set DEBUG=False
# - Set AUTHORIZED_IPS=* (allow all, or specific IPs)
# - Use PostgreSQL database (add-on in Railway)
# - Set LOG_LEVEL=INFO or WARNING
# - Use secure API keys (generate with: python -c "import secrets; print(secrets.token_hex(16))")

